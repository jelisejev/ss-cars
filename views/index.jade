extends layout

block content
  table
    for section in sections
      tr
        th(colspan=5)=section.model
      for ad in section.ads
        tr(class = (ad.alert) ? 'alert' : '')
          td
            img(src=ad.imageUrl)
          td
            a(href=ad.url)=ad.title
          td=ad.year
          td=ad.engine
          td=ad.run
          td=ad.price
